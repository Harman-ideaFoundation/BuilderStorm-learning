{% include "templates/header.html.twig" %}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BuilderStorm Learning</title>
</head>

<body>
    <div class="container">
        <div class="row  pt-5">
            <div class="col-sm-6">
                <h3>Assign Project To User</h3>
            </div>
            <div class="col-sm-6 text-end">
                <a href="../admin/overview.php"><button class="btn btn-dark">Go Back</button></a>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-12">
                <table class="table">
                    <form method="post" action="../admin/user_ajax.php">
                        <thead>
                            <tr class="text-center">
                                <th>Project Id</th>
                                <th>Name</th>
                                <th>Address</th>
                                <th>Start date</th>
                                <th>End date</th>
                                <th>Assign</th>
                            </tr>
                        </thead>
                        <tbody>
                                <input type="hidden" name="user_id" value="{{id}}" />
                            {% for key,user in data %}
                            {% for innerkey,inneruser in user %}
                            <tr class="text-center">
                                <td>{{inneruser['id']}}</td>
                                <td>{{inneruser['name']}}</td>
                                <td>{{inneruser['address']}}</td>
                                <td>{{inneruser['start_date']}}</td>
                                <td>{{inneruser['end_date']}}</td>
                                <td>
                                    <input type="checkbox" name="checkboxes[]" value="{{inneruser['id']}}">
                                </td>
                            </tr>
                            {% endfor %}
                            {% endfor %}
                           
                        </tbody>
                        <tfoot>
                            <tr class="text-end">
                                <td colspan="6">
                                    <input type="submit" name="assign_projects" value="Assign Projects" />
                                </td>
                            </tr>
                            <tr class="text-center">
                                <td colspan="6">
                                    {% for i in range(1,page_data) %}
                                
                                    <a href='../admin/assign_project.php?page={{i}}&assign={{id}}'><button type="button"
                                            class="btn btn-outline-info btn-sm">{{i}}</button>
                                    </a>
                                    {% endfor %}
                                </td>
                            </tr>
                        </tfoot>
                    </form>
                </table>
            </div>
        </div>
    </div>
</body>

</html>
{% include "templates/footer.html.twig" %}