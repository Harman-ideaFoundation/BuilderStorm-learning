{% include "templates/header.html.twig" %}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BuilderStorm Learning</title>
</head>

<body>
    <div class="container">
        <div class="row  pt-5">
            <div class="col-sm-6">
                <h3>Edit User</h3>
            </div>
            <div class="col-sm-6 text-end">
                <a href="../admin/overview.php"><button class="btn btn-dark">Go Back</button></a>
            </div>
        </div>
        <hr />
        <form id="edit_user_form" action="../admin/user_ajax.php" method="post" enctype="multipart/form-data">
            <div class="row pt-5">
                <div class="col-sm-6">
                    <input hidden type="text" value="{{data['id']}}" name="id" />
                    <label>First Name</label>
                    <input type="text" id="first_name" name="first_name" value="{{data['first_name']}}" class="form-control" /><br />
                    <label>User Type</label>
                    <select class="form-control" id="user_type" name="user_type">
                        {% set incr = 1 %}

                        {% for key,user in types %}
                        {% for id,type in user %}
                        <option value={{ incr }}>{{user['type']}}</option>
                        {% endfor %}
                        {% set incr = incr + 1 %}
                        {% endfor %}
                    </select><br />
                    <label>Address</label>
                    <textarea class="form-control" name="address"id="address">{{data['address']}}</textarea><br />
                    <label>Email</label>
                    <input type="email" id="email" name="email" value="{{data['email']}}" class="form-control" /><br />
                    <label>D.O.B</label>
                    <input type="date" id="dob" name="dob" value="{{data['dob']}}" class="form-control" /><br />
                </div>
                <div class="col-sm-6">
                    <img src="{{data['image']}}" with="100%" height="200px" /><br /><br />
                    <input type="file" id="image" name="image" class="form-control" /><br />
                    <label>Last Name</label>
                    <input type="text" id="last_name" name="last_name" value="{{data['last_name']}}" class="form-control" /><br />
                    <button type="submit" class="btn btn-dark" name="update_user" id="update_user">Update User</button>
                </div>
                
            </div>
        </form>
    </div>
</body>

</html>
{% include "templates/footer.html.twig" %}
<script src="../app/js/edit_user.js" type="text/javascript"></script>


