{% include "templates/header.html.twig" %}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BuilderStorm Learning</title>
</head>

<body>
    <div class="container">
        <div class="row  pt-5">
            <div class="col-sm-6">
                <h3>Edit Project</h3>
            </div>
            <div class="col-sm-6 text-end">
                <a href="../admin/all_projects.php"><button class="btn btn-dark">Go Back</button></a>
            </div>
        </div>
        <hr />
        <form id="edit_project_form" method="post" enctype="multipart/form-data">
            <div class="row pt-5">
                <div class="col-sm-6">
                    <input hidden type="text" value="{{data['id']}}" name="id" />
                    <label>Project Name</label>
                    <input type="text" id="project_name" name="project_name" value="{{data['name']}}" class="form-control" /><br />
                    <label>Address</label>
                    <textarea class="form-control" name="address" id="address">{{data['address']}}</textarea><br />
                    <label>Start Date </label>
                    <input type="date" id="start_date" name="start_date" value="{{data['start_date']}}" class="form-control" /><br />
                    <label>End Date </label>
                    <input type="date" id="end_date" value="{{data['end_date']}}" name="end_date" class="form-control" /><br />
                </div>
                <div class="col-sm-6">
                    <img src="{{data['image']}}" with="100%" height="200px" /><br /><br />
                    <input type="file" id="image" name="image" class="form-control" /><br />
                    <button type="submit" class="btn btn-dark" name="update_project" id="update_project">Update Project</button>
                </div>
            </div>
        </form>
    </div>
</body>

</html>
