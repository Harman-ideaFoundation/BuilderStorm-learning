{% include "templates/header.html.twig" %}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BuilderStorm Learning</title>
</head>

<body>
    <div class="container">
        <div class="row  pt-5">
            <div class="col-sm-6">
                <h3>Create User Here...</h3>
            </div>
            <div class="col-sm-6 text-end">
                <a href="../admin/overview.php"><button class="btn btn-dark">Go Back</button></a>
            </div>
        </div>
        <hr />
            <form id="create_user_form" method="post" enctype="multipart/form-data" >
                <div class="row pt-5">
                        <div class="col-sm-1"></div>
                        <div class="col-sm-5">
                            <label>First Name</label>
                            <input type="text" id="first_name" name="first_name" class="form-control" /><br />
                            <label>Email</label>
                            <input type="email" id="email" name="email" class="form-control" /><br />
                            <label>User Type</label>
                            <select class="form-control" id="user_type" name="user_type">
                                {% set incr = 1 %}
                                <option></option>
                                {% for key,user in types %}
                                    {% for id,type in user %}
                                        <option value={{ incr }}>{{user['type']}}</option>
                                    {% endfor %}
                                    {% set incr = incr + 1 %}
                                {% endfor %}
                            </select><br />
                            <label>Address</label>
                            <textarea class="form-control" name="address" id="address"></textarea><br />
                        </div>
                        <div class="col-sm-5">
                            <label>Profile Image</label>
                            <input type="file" id="file" name="file" class="form-control" /><br />
                            <label>Last Name</label>
                            <input type="text" id="last_name" name="last_name" class="form-control" /><br />
                            <label>D.O.B</label>
                            <input type="date" id="dob" name="dob" class="form-control" /><br />
                           
                            <label>Set Password</label>
                            <input type="password" id="password" name="password" class="form-control" /><br />
                            <button type="submit" class="btn btn-dark" name="submit_user" id="submit_btn">Submit</button>
                            
                        </div>
                        <div class="col-sm-1"></div>
                </div>
            </form>
    </div>
</body>

</html>
{% include "templates/footer.html.twig" %}
<script src="../app/js/create_user.js" type="text/javascript"></script>